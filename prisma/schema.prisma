generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  relationMode = "foreignKeys"
  url          = env("DATABASE_URL")
}

model Department {
  id          String     @id @default(nanoid(6))
  name        String     @db.VarChar(30)
  slug        String     @unique @db.VarChar(50)
  description String
  created_at  DateTime   @default(now()) @db.Timestamptz(1)
  branches    Branch[]
  employees   Employee[]
}

model Branch {
  id           String      @id @default(nanoid(6))
  name         String      @db.VarChar(30)
  slug         String      @unique @db.VarChar(50)
  description  String
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])
  created_at   DateTime    @default(now()) @db.Timestamptz(1)
  employees    Employee[]
}

model Address {
  id         String   @id @default(nanoid(6))
  index      String
  country    String
  city       String
  street     String
  building   String
  num        String
  created_at DateTime @default(now()) @db.Timestamptz(1)
  employeeId String   @unique
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

model Employee {
  id           String      @id @default(nanoid(6))
  job_title    String
  first_name   String
  last_name    String
  slug         String?     @unique
  description  String?
  birthday     DateTime    @db.Date
  email        String      @unique
  tel          String
  isAdmin      Boolean     @default(false)
  password     String?
  token        String?
  image        String?
  departmentId String?
  branchId     String?
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt @db.Timestamptz(1)
  address      Address?
  branch       Branch?     @relation(fields: [branchId], references: [id])
  department   Department? @relation(fields: [departmentId], references: [id])
}
